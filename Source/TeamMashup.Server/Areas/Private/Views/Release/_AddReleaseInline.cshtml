@using TeamMashup.Core.I18n;

<script type="text/javascript">

    $(document).ready(function () {

        $('.datepicker').datepicker({
            //format: 'dd/mm/yyyy',
            startDate: '-3d'
        });

    });

</script>

@using (Ajax.CustomBeginForm("AddReleaseInline", "addReleaseInline", new { role = "form", @class = "form-inline" }))
{
    <div class="form-group">
        <label class="sr-only" for="name">@Localized.Name</label>
        <input type="text" id="name" name="name" class="form-control fixed-w-500" placeholder="@Localized.EnterReleaseName" />
        @Html.ValidationPopover("name")
    </div>
    <div class="form-group">
        <label for="from">@Localized.From</label>
        <input type="text" id="from" name="from" class="form-control fixed-w-200 datepicker"/>
        @Html.ValidationPopover("from")
    </div>
    <div class="form-group">
        <label for="from">@Localized.To</label>
        <input type="text" id="to" name="to" class="form-control fixed-w-200 datepicker"/>
        @Html.ValidationPopover("to")
    </div>
    
    <button id="addQuick" type="submit" class="btn btn-primary">@Localized.Add</button>
}