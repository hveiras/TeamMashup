@using TeamMashup.Core.I18n;

@model TeamMashup.Models.Private.AddIssueInlineModel

@using(Ajax.CustomBeginForm("AddIssueInline", "addIssueInline", new { role = "form", @class = "form-inline" }))
{
    <div class="form-group">
        <label class="sr-only" for="summary">@Localized.Summary</label>
        <input type="text" id="summary" name="summary" class="form-control fixed-w-500" placeholder="@Localized.EnterIssueSummary" />
        @Html.ValidationPopover("summary")
    </div>
    <div class="form-group">
        @Html.DropDownListForEnum(m => m.Type, null, new { @class= "form-control fixed-w-200", id = "type"})
    </div>
    
    <button id="addQuick" type="submit" class="btn btn-primary">@Localized.Add</button>
    <button id="addWithDetails" type="button" class="btn btn-default">@Localized.AddWithDetails</button>
}