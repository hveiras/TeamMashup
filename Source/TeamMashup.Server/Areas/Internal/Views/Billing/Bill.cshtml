@model TeamMashup.Models.Internal.BillModel

@{
    ViewBag.Title = "Bill";
    Layout = "~/Views/Shared/_Printable.cshtml";
}

<div id="billing">
    <div class="container bill">
        <div class="row header">
            <div class="col-xs-5 left-aside">
                <h4>TeamMashup S.R.L</h4>
                <p>Av. Córdoba XXXX 1A (1427) Capital Federal</p>
                <p>Responsable Inscripto</p>
            </div>
            <div class="col-xs-2 type">
                <h1>@Model.Type</h1>
            </div>
            <div class="col-xs-5 right-aside">
                <h4>N° 0001-00000001</h4>
                <p>Fecha: @DateTime.Now.ToShortDateString()</p>
                <p>C.U.I.T: XX-XXXXXXXX-XX</p>
                <p>ING. BRUTOS: XX-XXXXXXXX-XX</p>
                <p>INICIO DE ACT.: 8/11/2013</p>
            </div>
        </div>
        <div class="row">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Señor/es</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.CustomerName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Domicilio</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.CustomerAddress</p>
                    </div>
                </div>
            </form>
        </div>
        <hr />
        <p>CONDICIONES DE VENTA</p>
        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>CANT.</th>
                        <th>DESCRIPCION</th>
                        <th>P. UNIT.</th>
                        <th>IMPORTE</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Quantity</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                            <td>@item.Total</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">TOTAL</td>
                        <td>@Model.Items.Sum(x => x.Total)</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
