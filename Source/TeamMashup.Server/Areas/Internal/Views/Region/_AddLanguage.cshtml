@using TeamMashup.Core.I18n

@model TeamMashup.Models.Internal.LanguageModel

@using(Ajax.CustomBeginForm("AddLanguage", "addLanguage", new { role = "form", @class = "form-inline" }))
{
    <div class="form-group">
        <label class="sr-only" for="name">@Localized.Name</label>
        <input type="text" id="name" name="name" class="form-control fixed-w-500" placeholder="@Localized.Name" />
        @Html.ValidationPopover("name")
    </div>
    
    <div class="form-group">
        <label class="sr-only" for="code">@Localized.Code</label>
        <input type="text" id="code" name="code" class="form-control fixed-w-500" placeholder="@Localized.Code" />
        @Html.ValidationPopover("code")
    </div>
    
    <button id="add" type="submit" class="btn btn-primary">@Localized.Add</button>
}