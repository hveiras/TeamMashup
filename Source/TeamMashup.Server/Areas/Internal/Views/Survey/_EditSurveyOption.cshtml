@using TeamMashup.Core.I18n
@using TeamMashup.Server.Areas.Internal.Views.Region.i18n

@model TeamMashup.Models.Internal.SurveyItemModel

<script type="text/javascript">

    function editSurveyOptionComplete() {
    }

    function editSurveyOptionSuccess(data) {
        modal.modal('hide');
        table.draw();
    }

    function editSurveyOptionValidationErrors(data) {
        $("#modal").html(data.View);
        applyUiErrorStylesIfAny();
    }

</script>

@using (Ajax.CustomBeginForm("EditSurveyOption", "editSurveyOption", new { role = "form", @class = "form" }))
{
    <div class="modal-body">

        @Html.ValidationSummary(true)

        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <label for="description">@Localized.Description</label>
            <input type="text" id="description" name="description" value="@Model.Description" class="form-control" placeholder="@Localized.EnterDescription" />
            @Html.ValidationMessage("description", new { @class = "control-label" })
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">@Localized.Close</button>
        <button type="submit" class="btn btn-primary delete">@Localized.Save</button>
    </div>
}